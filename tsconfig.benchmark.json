{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": [
        "src/renderer/src/**/*",
        "scripts/**/*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}